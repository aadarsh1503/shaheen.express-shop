# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_for_users
JWT_SECRET2=your_jwt_secret_key_for_admins

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for MPGS callbacks)
FRONTEND_URL=http://localhost:5173

# MPGS Configuration (Already hardcoded in controller for test environment)
# For production, you would add:
# MPGS_MERCHANT_ID=your_production_merchant_id
# MPGS_API_PASSWORD=your_production_api_password
# MPGS_BASE_URL=your_production_gateway_url

# Email Configuration (Optional - for future email notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=noreply@shaheenexpress.com

# ImageKit Configuration (if using)
# IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
# IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
# IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint
